/**index.wxss**/
page {
  background-color: var(--bgColor);
}

.role-info {
  position: absolute;
  top: 90px;
  left: 30px;
  display: flex;
  align-items: center;
}
.header {
  width: 60px;
  height: 60px;
  border-radius: 180px;
  background-color: #fff;
}
.roles {
  display: flex;
  flex-direction: column;
  margin-left: 11px;
}
.role {
  background-image: linear-gradient(180deg, #fdcda5 0%, #ff923f 100%);
  border-radius: 10px;
  padding: 2px 10px;
  margin-top: 4px;
  font-size: 10px;
}
.box_wrapper {
  background: #ffffff;
  box-shadow: 0px 2px 4px 0px rgba(219, 239, 255, 0.5);
  border-radius: var(--themeRadius);
  filter: blur(0px);
  display: flex;
  transform: translate(0px, -40rpx);
  flex-wrap: wrap;
  padding: 20px 0;
}

.help_center{
  background: #ffffff;
  box-shadow: 0px 2px 4px 0px rgba(219, 239, 255, 0.5);
  border-radius: var(--themeRadius);
  filter: blur(0px);
  display: flex;
  flex-direction: column;
  padding-bottom:20px;
}

.help_center .content{
  display: flex;
}

.box_wrapper_item {
  display: flex;
  flex-direction: column;
  flex: 0 0 25%;
  align-items: center;
}
.box_wrapper_item_img {
  width: 30px;
  height: 30px;
}

.box_wrapper_item_text {
  font-size: 14px;
  margin-top: 6px;
}

.commission {
  background-color: #ffffff;
  border-radius: 5px;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.remind {
  flex-direction: row;
  justify-content: space-between;
  display: flex;
  padding: 10px 19px 27px 21px;
}

.withdrawal-amount {
  display: flex;
  flex-direction: column;
  padding-top: 9px;
}

.withdrawal-amount .text {
  font-size: 12px;
  color: #333333;
  padding-bottom: 5px;
}

.withdrawal-amount .amount {
  color: #ff6868;
}

.balance-detal {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.balance-detal .balance {
  font-size: 10px;
  color: #777770;
  border-bottom: 0.5px solid #777770;
  margin-bottom: 12px;
}

.entry {
  border-top: 1px solid #c5c4c4;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  padding-top: 10px;
  padding-bottom: 5px;
}

.entry-item {
  display: flex;
  flex-direction: column;
  font-size: 10px;
  color: #333333;
  flex: 1;
  align-items: center;
  border-right: 1px solid #979797;
}

.entry-item:last-child {
  border-right: none;
}


.headportrait {
  width: 180px;
  height: 168px;
}